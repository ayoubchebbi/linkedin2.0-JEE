<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.isamm.linkedin.beans.Commentaire" table="commentaire" schema="jee">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="contenu">
            <column name="contenu" sql-type="varchar(150)" length="150"/>
        </property>
        <property name="idpublication">
            <column name="idpublication" sql-type="int(11)"/>
        </property>
        <property name="idutilisateur">
            <column name="idutilisateur" sql-type="int(11)"/>
        </property>
        <property name="date">
            <column name="date" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>